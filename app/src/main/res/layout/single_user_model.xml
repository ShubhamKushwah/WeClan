<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_avatar_model"
        android:src="@mipmap/ic_launcher_round"
        android:layout_margin="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/user_status_model"
        android:text="status here"
        android:layout_marginStart="84dp"
        android:textSize="14sp"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:layout_marginTop="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_full_name_model"
        android:text="Username"
        android:layout_marginStart="84dp"
        android:textSize="18sp"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/user_online_image_model"
        android:layout_toEndOf="@id/user_full_name_model"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitCenter"
        android:tint="#00ff00"
        android:visibility="invisible"
        android:src="@drawable/ic_dot_black_24dp"
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/user_follow_btn_model"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:text="Follow"
        android:textSize="12sp" />

</RelativeLayout>